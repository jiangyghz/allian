<?xml version="1.0" encoding="UTF-8" ?>
<configuration status="INFO">
    <!--全局参数-->
    <properties>
        <property name="LOG_HOME">D:/log</property>
        <property name="FILE_NAME">springboot</property>
        <Property name="pattern">%d{yyyy-MM-dd HH:mm:ss,SSS} %5p %c{1}:%L - %m%n</Property>
    </properties>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console"></AppenderRef>
            <AppenderRef ref="rolling_info"></AppenderRef>
            <AppenderRef ref="rolling_error"></AppenderRef>
        </Root>
        <!--只将com.kk.springboot.demo写到文件-->
        <Logger name="com.bond.store" level="INFO">
            <AppenderRef ref="file"></AppenderRef>
        </Logger>
        <!--过滤掉spring和mybatis的一些无用的DEBUG信息-->
        <logger name="org.springframework" level="INFO"></logger>
        <logger name="org.mybatis" level="INFO"></logger>
    </Loggers>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <!--控制台只输出level及以上级别的信息-->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${pattern}</Pattern>
            </PatternLayout>
        </Console>
        <!-- 同一来源的Appender可以定义多个RollingFile，定义按天存储日志 -->
        <RollingFile name="rolling_info"
                     fileName="logs/info.log"
                     filePattern="logs/%d{yyyy-MM-dd}-info.log">
<!--                level：配对的级别，即该级别的名称。-->
<!--            　　onMatch： 符合条件的级别。可填写： ACCEPT, DENY or NEUTRAL. 默认是NEUTRAL。-->
<!--            　　onMisMatch：不符合的级别。可填写： ACCEPT, DENY or NEUTRAL. 默认是DENY。-->
<!--            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>-->
            <PatternLayout>
                <Pattern>${pattern}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <!--<SizeBasedTriggeringPolicy size="1 KB"/>-->
            </Policies>
            <Filters>
                <ThresholdFilter level="INFO" />
<!--                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>-->
            </Filters>
        </RollingFile>
        <RollingFile name="rolling_error"
                     fileName="logs/error.log"
                     filePattern="logs/%d{yyyy-MM-dd}-error.log">
            <ThresholdFilter level="ERROR" />
            <PatternLayout>
                <Pattern>${pattern}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <!--<SizeBasedTriggeringPolicy size="1 KB"/>-->
            </Policies>
<!--            <Filters>-->
<!--                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>-->
<!--                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>-->
<!--            </Filters>-->
        </RollingFile>
        <File name="file" fileName="logs/debug.log">
            <!--&lt;!&ndash;控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）&ndash;&gt;-->
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>${pattern}</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
</configuration>